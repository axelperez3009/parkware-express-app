{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "prisma/*.ts",
          "routes/*.ts",
          "controllers/*.ts"
        ]
      }
    },
    "include": [
      "prisma/*.ts",
      "routes/*.ts",
      "controllers/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
  